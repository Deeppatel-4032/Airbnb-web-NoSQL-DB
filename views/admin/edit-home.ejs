<%- include('../partials/head') %>
  </head>

  <body class="bg-gradient-to-br from-red-50 via-pink-50 to-orange-50 min-h-screen">
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 py-12">
        <!-- Card Container -->
        <div class="max-w-2xl mx-auto">
          <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-2xl p-8 border border-gray-100">
            <!-- Header Section -->
            <div class="text-center mb-8">
              <div
                class="w-20 h-20 mx-auto mb-6 rounded-full bg-gradient-to-r from-red-500 to-pink-500 flex items-center justify-center">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </div>
              <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <%= editing ? "Update Your Property" : "List Your Property" %>
              </h1>
              <p class="text-gray-600">Share your space with travelers around the world</p>
            </div>

            <!-- Form -->
            <form action="<%= editing ? '/edit-home' : '/home-added' %>" method="POST" class="space-y-6">
              <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">

              <!-- Property Name -->
              <div class="space-y-2">
                <label class="text-sm font-medium text-gray-700">Property Name</label>
                <input type="text" name="name" value="<%= editing ? home.name : '' %>"
                  class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                  placeholder="e.g. Cozy Beach House" required />
              </div>

              <!-- Price & Rating Group -->
              <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                  <label class="text-sm font-medium text-gray-700">Price per Night</label>
                  <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-500">â‚¹</span>
                    <input type="number" name="price" value="<%= editing ? home.price : '' %>"
                      class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 pl-8"
                      placeholder="500" required />
                  </div>
                </div>
                <div class="space-y-2">
                  <label class="text-sm font-medium text-gray-700">Rating</label>
                  <input type="number" name="rating" value="<%= editing ? home.rating : '' %>"
                    class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                    placeholder="4.5" min="0" max="5" step="0.1" required />
                </div>
              </div>

              <!-- Location -->
              <div class="space-y-2">
                <label class="text-sm font-medium text-gray-700">Location</label>
                <input type="text" name="location" value="<%= editing ? home.location : '' %>"
                  class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                  placeholder="e.g. Mumbai, Maharashtra" required />
              </div>

              <!-- Image URL -->
              <div class="space-y-2">
                <label class="text-sm font-medium text-gray-700">Image URL</label>
                <input type="url" name="imageUrl" value="<%= editing ? home.imageUrl : '' %>"
                  class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                  placeholder="https://example.com/image.jpg" required />
              </div>

              <!-- Description -->
              <div class="space-y-2">
                <label class="text-sm font-medium text-gray-700">Description</label>
                <textarea name="description"
                  class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 min-h-[120px]"
                  placeholder="Describe your property..."><%= editing ? home.description : '' %></textarea>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-pink-500 text-white py-4 rounded-xl
                         font-semibold tracking-wide
                         hover:from-red-600 hover:to-pink-600 
                         transform hover:-translate-y-0.5 
                         transition-all duration-200
                         focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 
                         shadow-lg">
                <%= editing ? 'Update Property' : 'List Property' %>
              </button>
            </form>
          </div>
        </div>
      </main>
  </body>

  </html>