<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container  mx-auto mt-8 p-8">
        <h1 class="text-3xl font-bold mb-10 text-center text-gray-800">
          LogIn Your Home on AirBnB
        </h1>
        <form action="/login" method="POST" class="max-w-md mx-auto">
          <input type="email" name="email" placeholder="Enter Your Email ID"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            required />
          <input type="password" name="password" placeholder="Enter your Password"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            required />
          <button type="submit"
            class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-400 transition duration-300">logIn</button>
          <p class="mt-10">Don't Have An Account...?
            <a href="/signUpForm" class="text-blue-500 pl-2">Sign Up Now</a>
          </p>
        </form>
      </main>
  </body>

  </html>