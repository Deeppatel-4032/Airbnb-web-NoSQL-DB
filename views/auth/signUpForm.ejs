<%- include('../partials/head') %>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-red-50 via-pink-50 to-orange-50">
    <%- include('../partials/nav') %>
      <main class="container mx-auto min-h-[calc(100vh-80px)] flex items-center justify-center px-4">
        <div class="w-full max-w-lg bg-white/80 backdrop-blur-sm shadow-2xl rounded-3xl p-8 border border-gray-100">
          <!-- Header Section with Icon -->
          <div class="text-center mb-8">
            <div
              class="w-20 h-20 mx-auto mb-6 rounded-full bg-gradient-to-r from-red-500 to-pink-500 flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
              </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Create an Account</h1>
            <p class="text-gray-600">Join our community of travelers and hosts</p>
          </div>
          <%- include('../partials/errors') %>
            <form action="/signUp" method="POST" class="space-y-6">
              <!-- Name Fields -->
              <div class="grid grid-cols-2 gap-4">
                <div class="group">
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                  <div class="relative">
                    <input type="text" name="firstName" id="firstName"
                      value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                      class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                      placeholder="John" required />
                  </div>
                </div>
                <div class="group">
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                  <div class="relative">
                    <input type="text" name="lastName" id="lastName"
                      value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                      class="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                      placeholder="Doe" required />
                  </div>
                </div>
              </div>

              <!-- Email Field -->
              <div class="space-y-2">
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg>
                  </div>
                  <input type="email" name="email" id="email" value="<%= oldInput.email ? oldInput.email : '' %>"
                    class="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                    placeholder="your@email.com" required />
                </div>
              </div>

              <!-- Password Fields -->
              <div class="space-y-4">
                <div class="space-y-2">
                  <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                      </svg>
                    </div>
                    <input type="password" name="password" id="password"
                      class="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                      placeholder="••••••••" required />
                  </div>
                </div>

                <div class="space-y-2">
                  <label for="com_password" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                      </svg>
                    </div>
                    <input type="password" name="com_password" id="com_password"
                      class="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200"
                      placeholder="••••••••" required />
                  </div>
                </div>
              </div>

              <!-- User Type Selection -->
              <div class="bg-white/50 backdrop-blur-sm p-4 rounded-xl border border-gray-200">
                <p class="text-sm font-medium text-gray-700 mb-3">I want to join as:</p>
                <div class="flex items-center space-x-6">
                  <label class="flex items-center cursor-pointer group">
                    <input type="radio" name="userType" value="guest"
                      checked="<%= oldInput.userType === 'guest' ? 'checked' : '' %>"
                      class="w-5 h-5 text-red-500 border-gray-300 focus:ring-red-500">
                    <span class="ml-2 text-gray-700 group-hover:text-red-500 transition duration-200">Guest</span>
                  </label>
                  <label class="flex items-center cursor-pointer group">
                    <input type="radio" name="userType" value="admin"
                      checked="<%= oldInput.userType === 'admin' ? 'checked' : '' %>"
                      class="w-5 h-5 text-red-500 border-gray-300 focus:ring-red-500">
                    <span class="ml-2 text-gray-700 group-hover:text-red-500 transition duration-200">Admin</span>
                  </label>
                </div>
              </div>

              <!-- Terms Checkbox -->
              <label class="flex items-center cursor-pointer group">
                <input type="checkbox" name="terms" required
                  class="w-5 h-5 text-red-500 border-gray-300 rounded focus:ring-red-500">
                <span class="ml-2 text-sm text-gray-600">
                  I agree to the <a href="#" class="text-red-500 hover:text-red-600 underline">terms and conditions</a>
                </span>
              </label>

              <!-- Submit Button -->
              <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-pink-500 text-white py-4 rounded-xl font-semibold
                       hover:from-red-600 hover:to-pink-600 transform hover:-translate-y-0.5 transition-all duration-200
                       focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 shadow-lg">
                Create Account
              </button>

              <!-- Login Link -->
              <p class="text-center text-gray-600">
                Already have an account?
                <a href="/logInForm" class="text-red-500 hover:text-red-600 font-medium ml-1">Log In</a>
              </p>
            </form>
        </div>
      </main>
  </body>

  </html>