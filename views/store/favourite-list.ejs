<%- include('../partials/head') %>
  </head>

  <body class="bg-gradient-to-br from-red-50 via-pink-50 to-orange-50 min-h-screen">
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 py-10">
        <!-- Hero Section -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold mb-3 bg-gradient-to-r from-red-500 to-pink-600 bg-clip-text text-transparent">
            Your Favorite Homes
          </h1>
          <p class="text-gray-600">Places you've loved and saved for later</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          <% if (getfavouriteHouse && getfavouriteHouse.length> 0) { %>
            <% getfavouriteHouse.forEach(home=> { %>
              <div
                class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300">
                <!-- Image Container -->
                <div class="relative overflow-hidden aspect-w-16 aspect-h-12">
                  <img src="<%= home.photo %>" alt="<%= home.name %>"
                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500" />
                  <!-- Price Badge -->
                  <div class="absolute top-4 right-4">
                    <div class="bg-white/95 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
                      <span class="text-red-500 font-bold text-lg">â‚¹<%= home.price %></span>
                      <span class="text-gray-600">/night</span>
                    </div>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6 space-y-4">
                  <!-- Title -->
                  <h3
                    class="text-xl font-bold text-gray-800 group-hover:text-red-500 transition-colors duration-300 truncate">
                    <%= home.name %>
                  </h3>

                  <!-- Location -->
                  <div class="flex items-center text-gray-500">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-sm">
                      <%= home.location %>
                    </span>
                  </div>

                  <!-- Rating -->
                  <div class="flex items-center space-x-1">
                    <div class="flex">
                      <% for(let i=0; i < Math.floor(home.rating); i++) { %>
                        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        <% } %>
                    </div>
                    <span class="text-sm font-medium text-gray-600">
                      <%= home.rating %> Rating
                    </span>
                  </div>

                  <!-- Action Buttons -->
                  <div class="pt-4 grid grid-cols-2 gap-3">
                    <a href="/home-details/<%= home._id %>"
                      class="flex items-center justify-center px-4 py-2.5 bg-gray-50 text-gray-700 rounded-xl font-semibold tracking-wide border border-gray-200 hover:bg-gray-100 hover:text-gray-900 transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gray-200 shadow-sm hover:shadow-md">
                      View Details
                    </a>
                    <form action="/favourite/delete/<%= home._id %>" method="post" class="inline">
                      <button type="submit"
                        class="flex items-center justify-center w-full px-4 py-2.5 bg-red-500 text-white rounded-xl font-semibold tracking-wide hover:bg-red-600 transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 shadow-lg hover:shadow-xl">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Remove
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %>
                <% } %>
        </div>
      </main>
  </body>

  </html>