<%- include("../partials/head") %>
  </head>

  <body class="bg-gradient-to-br from-gray-50 to-gray-100 text-gray-900">
    <%- include("../partials/nav") %>

      <main class="container mx-auto px-4 py-10">
        <h2
          class="text-4xl font-bold text-center mb-10 bg-gradient-to-r from-red-500 to-pink-600 bg-clip-text text-transparent">
          Discover Amazing Homes
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          <% if (homes.length> 0) { %>
            <% homes.forEach(home=> { %>
              <div
                class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300">
                <!-- Image Container -->
                <div class="relative overflow-hidden">
                  <img
                    class="h-56 w-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                    src="<%= home.imageUrl %>" alt="<%= home.name %>" />
                  <!-- Price Tag -->
                  <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full">
                    <span class="text-red-500 font-bold">â‚¹<%= home.price %></span>
                    <span class="text-gray-600 text-sm">/night</span>
                  </div>
                </div>

                <!-- Content Container -->
                <div class="p-5 space-y-3">
                  <!-- Title and Favorite -->
                  <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 truncate">
                      <%= home.name %>
                    </h3>
                    <%- include('../partials/favourite', { home }) %>
                  </div>

                  <!-- Description -->
                  <p class="text-sm text-gray-600 line-clamp-2">
                    <%= home.description %>
                  </p>

                  <!-- Location -->
                  <div class="flex items-center text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-sm">
                      <%= home.location %>
                    </span>
                  </div>

                  <!-- Rating -->
                  <div class="flex items-center">
                    <div class="flex items-center">
                      <% for(let i=0; i < Math.floor(home.rating); i++) { %>
                        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        <% } %>
                    </div>
                    <span class="ml-1 text-sm text-gray-600">
                      <%= home.rating %> Rating
                    </span>
                  </div>

                  <!-- Buttons -->
                  <div class="pt-4 flex items-center space-x-3">
                    <a href="/home-details/<%= home._id %>"
                      class="flex-1 px-4 py-2 bg-blue-500 text-white text-center rounded-xl hover:bg-blue-600 transform hover:-translate-y-0.5 transition-all duration-200">
                      View Details
                    </a>
                    <button
                      class="flex-1 px-4 py-2 bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-xl hover:from-red-600 hover:to-pink-600 transform hover:-translate-y-0.5 transition-all duration-200">
                      Book Now
                    </button>
                  </div>
                </div>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="col-span-4 text-center py-20">
                    <div class="text-gray-400 text-xl">No homes available at the moment</div>
                    <p class="text-gray-500 mt-2">Check back later for new listings</p>
                  </div>
                  <% } %>
        </div>
      </main>
  </body>

  </html>