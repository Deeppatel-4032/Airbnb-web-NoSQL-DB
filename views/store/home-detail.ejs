<%- include("../partials/head") %>
  </head>

  <body class="bg-gradient-to-br from-red-50 via-pink-50 to-orange-50 min-h-screen">
    <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 py-10">
        <!-- Card Container -->
        <div class="max-w-6xl mx-auto bg-white/80 backdrop-blur-sm shadow-2xl rounded-3xl overflow-hidden">
          <!-- Hero Image Section -->
          <div class="relative h-[500px] overflow-hidden">
            <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-full object-cover">
            <!-- Overlay Gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <!-- Price Badge -->
            <div class="absolute top-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm px-6 py-3 rounded-full shadow-lg">
                <span class="text-red-500 font-bold text-2xl">â‚¹<%= home.price %></span>
                <span class="text-gray-600 text-lg">/night</span>
              </div>
            </div>
            <!-- Title Overlay -->
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <h1 class="text-4xl font-bold text-white mb-2">
                <%= home.name %>
              </h1>
              <div class="flex items-center text-white/90">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                <span class="text-lg">
                  <%= home.location %>
                </span>
              </div>
            </div>
          </div>

          <!-- Content Section -->
          <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <!-- Left Column - Description -->
              <div class="md:col-span-2 space-y-6">
                <div class="bg-white/50 rounded-2xl p-6 backdrop-blur-sm">
                  <h2 class="text-2xl font-bold text-gray-800 mb-4">About this place</h2>
                  <p class="text-gray-600 leading-relaxed">
                    <%= home.description %>
                  </p>
                </div>
              </div>

              <!-- Right Column - Details -->
              <div class="space-y-6">
                <!-- Rating Card -->
                <div class="bg-white/50 rounded-2xl p-6 backdrop-blur-sm">
                  <h3 class="text-xl font-semibold text-gray-800 mb-4">Rating & Reviews</h3>
                  <div class="flex items-center mb-4">
                    <div class="flex mr-2">
                      <% for(let i=0; i < Math.floor(home.rating); i++) { %>
                        <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        <% } %>
                    </div>
                    <span class="text-2xl font-bold text-gray-800">
                      <%= home.rating %>
                    </span>
                    <span class="text-gray-600 ml-1">/5</span>
                  </div>
                  <%- include('../partials/favourite') %>
                </div>

                <!-- Action Buttons -->
                <div class="space-y-4">
                  <button
                    class="w-full px-6 py-4 bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-xl font-semibold text-lg tracking-wide hover:from-red-600 hover:to-pink-600 transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 shadow-lg hover:shadow-xl">
                    Book Now
                  </button>
                  <button
                    class="w-full px-6 py-4 bg-white text-gray-700 rounded-xl font-semibold text-lg tracking-wide border border-gray-200 hover:bg-gray-50 hover:text-gray-900 transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gray-200 shadow-sm hover:shadow-md">
                    Contact Host
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>


  </body>

  </html>